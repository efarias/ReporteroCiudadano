<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarNoticia">

    <TextView
        android:id="@+id/MostrarTituloNoticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo Noticia"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/MostrarFotoNoticia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/MostrarFotoNoticia"
        android:layout_width="147dp"
        android:layout_height="140dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/MostrarTextoNoticia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/MostrarTextoNoticia"
        android:layout_width="345dp"
        android:layout_height="453dp"
        android:layout_marginBottom="32dp"
        android:text="Noticia"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>